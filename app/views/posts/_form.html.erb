<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <br>
  <%= f.submit %>

<% end %>
<br>
<% if user_signed_in? %>
  <%= link_to "Sign_Out", destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to "Sign_In", new_user_session_path %>
<% end %>